<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NavigationBarActivity"

    >

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_btn_Navigation_Bottom"
        android:layout_below="@id/nav_btn_Navigation_Top"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_btn_Navigation_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"
        app:itemIconTint="@android:color/black"
        android:background="@android:color/white"
        app:itemIconSize="50dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_btn_Navigation_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation2"
        app:itemIconTint="@android:color/black"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        app:itemIconSize="50dp"

        />
</RelativeLayout>